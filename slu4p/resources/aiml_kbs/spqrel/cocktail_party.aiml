<?xml version="1.0"?>
<aiml version="1.0">


    <topic name="TAKEORDER">

        <category>
            <pattern>RESET</pattern>
            <template>
                <think>
                    <set name="Customer">TOFILL</set>
                    <set name="Drink">TOFILL</set>
                </think>
            </template>
        </category>

        <category>
            <pattern>START</pattern>
            <template>
                <condition>
                    <li name="Customer" value="TOFILL">
                        <think>
                            <set name="topic">ASKNAME</set>
                        </think>
                        <srai>AskName</srai>
                    </li>
                    <li name="Drink" value="TOFILL">
                        <think>
                            <set name="topic">ASKDRINK</set>
                        </think>
                        <srai>AskDrink</srai>
                    </li>
                    <li>
                        <srai>COCKTAILDONE</srai>
                    </li>
                </condition>
            </template>
        </category>

        <category>
            <pattern>STOP</pattern>
            <template>
                <set name="topic"></set>
                [STOP]
            </template>
        </category>

        <category>
            <pattern>COCKTAILDONE</pattern>
            <template>
                [SAY]
                <random>
                    <li><get name="Customer"/>, thanks for your order. I'm going to bring you a<get name="Drink"/>!
                    </li>
                    <li>Perfect<get name="Customer"/>! Your
                        <get name="Drink"/>
                        is coming soon!
                    </li>
                    <li>A
                        <get name="Drink"/>
                        for<get name="Customer"/>! This is my new mission!
                    </li>
                    <li>Just a<get name="Drink"/>? I think you can do better,<get name="Customer"/>! However, I'll bring
                        you a<get name="Drink"/>...
                    </li>
                </random>
                <srai>TAKEORDERDATA</srai>
            </template>
        </category>

        <category>
            <pattern>TAKEORDERDATA</pattern>
            <template>
                |[TAKEORDERDATA]<get name="Customer"/>(<get name="Drink"/>)
            </template>
        </category>
    </topic>


    <topic name="UNKNOWNAVAILABLE">
        <category>
            <pattern>CUSTOMER * DRINK * START</pattern>
            <template>
                <think>
                    <set name="temp_customer">
                        <star index="1"/>
                    </set>
                </think>
                [SAY]
                <random>
                    <li>I'm sorry!</li>
                    <li>Wait...</li>
                    <li>Excuse me!</li>
                </random>
                <random>
                    <li>I don't know whether the
                        <star index="2"/>
                        for
                        <star index="1"/>
                        is available or not.
                    </li>
                    <li>I'm not able to see if the
                        <star index="2"/>
                        for
                        <star index="1"/>
                        is available.
                    </li>
                </random>
                <random>
                    <li>Is there the
                        <star index="2"/>
                        for<star index="1"/>?
                    </li>
                    <li>Is there the<star index="2"/>?
                    </li>
                </random>
            </template>
        </category>

        <category>
            <pattern>* YES *</pattern>
            <template>
                <srai>POSITIVERESPONSE</srai>
            </template>
        </category>

        <category>
            <pattern>* YES</pattern>
            <template>
                <srai>POSITIVERESPONSE</srai>
            </template>
        </category>

        <category>
            <pattern>YES *</pattern>
            <template>
                <srai>POSITIVERESPONSE</srai>
            </template>
        </category>

        <category>
            <pattern>YES</pattern>
            <template>
                <srai>POSITIVERESPONSE</srai>
            </template>
        </category>

        <category>
            <pattern>* NO *</pattern>
            <template>
                <srai>NEGATIVERESPONSE</srai>
            </template>
        </category>

        <category>
            <pattern>* NO</pattern>
            <template>
                <srai>NEGATIVERESPONSE</srai>
            </template>
        </category>

        <category>
            <pattern>NO *</pattern>
            <template>
                <srai>NEGATIVERESPONSE</srai>
            </template>
        </category>

        <category>
            <pattern>NO</pattern>
            <template>
                <srai>NEGATIVERESPONSE</srai>
            </template>
        </category>

        <category>
            <pattern>POSITIVERESPONSE</pattern>
            <template>
                [SAY]
                <random>
                    <li>Great!</li>
                    <li>Perfect!</li>
                    <li>That's great!</li>
                    <li>Brilliant!</li>
                </random>
                |[DRINKAVAILABLE]
            </template>
        </category>

        <category>
            <pattern>NEGATIVERESPONSE</pattern>
            <template>
                [SAY]
                <random>
                    <li>Okay, no problem!</li>
                    <li>Sure, no problem!</li>
                </random>
                <srai>ALTDRINK CUSTOMER
                    <get name="temp_customer"/>
                    START
                </srai>
            </template>
        </category>

        <category>
            <pattern>CUSTOMER * DRINK * STOP</pattern>
            <template>
                <set name="topic"></set>
                [STOP]
            </template>
        </category>

    </topic>

    <topic name="ALTDRINK">
        <category>
            <pattern>CUSTOMER * START</pattern>
            <template>
                [SAY]
                <random>
                    <li>What do you have, instead?</li>
                    <li>What can I bring to<star index="1"/>, instead?
                    </li>
                    <li>Do you have something else I can bring to<star index="1"/>, instead?
                    </li>
                </random>
            </template>
        </category>

        <category>
            <pattern>CUSTOMER * STOP</pattern>
            <template>
                <set name="topic"></set>
                [STOP]
            </template>
        </category>

        <!--
            I think the best way to catch the alternatives (as I don't know how they will be
            given), is to take everything the user says and try to match (afterwards) the
            possible drinks, among the ones pre-defined.
        -->
        <category>
            <that>INSTEAD</that>
            <pattern>*</pattern>
            <template>[DRINKSALTERNATIVES]
                <star/>
            </template>
        </category>


    </topic>


