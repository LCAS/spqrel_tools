<?xml version="1.0" encoding="utf-8"?>

<!-- Objects for Montreal 2018. Based on Nagoya file, this is made by looking at the docs at 
      https://github.com/RoboCupAtHome/Montreal2018
    Difficulty and type tags are not considered here.
    
-->

<categories>
  <category name="drinks" defaultLocation="counter" room="kitchen">
    <object name="grape juice"           difficulty="easy"                    canPour="true" />
    <object name="orange juice"          difficulty="easy"                    alcoholic="true" />
    <object name="chocolate drink"       difficulty="easy"                    canPour="true" />
    <object name="sprite"                difficulty="easy"                    canPour="true" />
    <object name="coke"                  difficulty="easy"                    canPour="true" />
  </category>

  <category name="cleaning stuff" defaultLocation="side table" room="bedroom">
    <object name="cloth"       difficulty="moderate"                         />
    <object name="scrubby"          difficulty="easy"                        />
    <object name="sponge"        difficulty="high"                           />
  </category>

  <category name="snacks" defaultLocation="bookcase" room="living room">
    <object name="potato chips"         difficulty="moderate" />
    <object name="pringles"             difficulty="easy" />
    <object name="crackers"             difficulty="easy" />
  </category>

  <category name="fruits" defaultLocation="bookcase" room="living room">
    <object name="apple"           difficulty="moderate" type="alike"   fruit="true"   />
    <object name="orange"          difficulty="moderate" type="alike"   fruit="true"   />
    <object name="paprika"         difficulty="moderate" type="alike"   fruit="true"   />
  </category>
  
  <category name="containers" defaultLocation="end table" room="living room">
    <object name="tray"          difficulty="high"     type="special" canPlaceOn="true" twoHands="true" />
    <object name="basket"        difficulty="high"     type="special" canPlaceIn="true" twoHands="true" />
  </category>

  <category name="food" defaultLocation="cupboard" room="kitchen">
    <object name="noodles"         difficulty="easy"                                   />
    <object name="sausages"        difficulty="easy"                                   />
    <object name="cereal"          difficulty="high"                                   />
  </category>

  <category name="cutlery" defaultLocation="storage table" room="kitchen">
    <object name="spoon"         difficulty="high"     type="known"                  />
    <object name="fork"          difficulty="high"     type="known"                  />
    <object name="knife"         difficulty="high"     type="known"                  />
  </category>
  
  <category name="tableware" defaultLocation="storage table" room="kitchen">
    <object name="dish"          difficulty="moderate" type="known"   canPlaceOn="true"                 />
    <object name="bowl"          difficulty="high"                    canPourIn="true"                  />
    <object name="cup"           difficulty="high"                    canPourIn="true"                  />
  </category>


</categories>


