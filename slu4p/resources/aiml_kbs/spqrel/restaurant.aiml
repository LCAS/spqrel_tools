<?xml version="1.0"?>
<aiml version="1.0">


    <topic name="ORDERDETECTED">
        <category>
            <pattern>START</pattern>
            <template>
                [SAY] I've detected a customer! Should I go and take the order?|[OPTIONS]yes_no
                <think>
                    <set name="topic">WAITFORORDER</set>
                </think>
            </template>
        </category>
    </topic>

