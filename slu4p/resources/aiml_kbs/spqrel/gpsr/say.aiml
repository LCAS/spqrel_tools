<?xml version="1.0" encoding="UTF-8"?>
<aiml version="1.0">

    <category>
        <pattern>SAY *</pattern>
        <template>
            [SAY]
            <srai>
                <star/>
            </srai>
        </template>
    </category>

    <category>
        <pattern>HELLO</pattern>
        <template>
            Hello!
        </template>
    </category>

    <category>
        <pattern>HELLOANDREA</pattern>
        <template>
            Hello Andrea! How can I help you?
        </template>
    </category>

    <category>
        <pattern>LOOKATME</pattern>
        <template>
            <random>
                <li>Hey <get name="Operator"/>, please pay attention!
                </li>
                <li><get name="Operator"/>, please focus!
                </li>
                <li>Do not distract, <get name="Operator"/>!
                </li>
            </random>
            <random>
                <li>Our help is needed!</li>
                <li>Someone requires our help!</li>
                <li>Duty calls!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>CALLINGATTENTION</pattern>
        <template>
            Excuse me! Can I bother you for a while?
        </template>
    </category>

    <category>
        <pattern>WAITASR</pattern>
        <template>
            <random>
                <li>Before speaking, wait until my eyes are blinking</li>
                <li>Speak only when my eyes are blinking</li>
            </random>
            and please, speak loud!
        </template>
    </category>

    <category>
        <pattern>INSPECTME</pattern>
        <template>
            <random>
                <li>I'm ready for the inspection!</li>
                <li>Come on, try me!</li>
                <li>I'm ready to start the inspection!</li>
                <li>I'm ready! Inspect me!</li>
            </random>
            Push the button to continue..
        </template>
    </category>

    <category>
        <pattern>DOOROPEN</pattern>
        <template>
            <random>
                <li>Could you open the door, please?</li>
                <li>I'm waiting! Could you open the door?</li>
                <li>I'm ready! Please open the door!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>OBSTACLE</pattern>
        <template>
            <random>
                <li>Ops! I see an obstacle in front of me!</li>
                <li>I can't go on! There's an obstacle!</li>
                <li>I'm sorry, but I can't proceed. There's an obstacle!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>COMEHERE</pattern>
        <template>
            <random>
                <li>Could you please come here?</li>
                <li>Please, come here!</li>
                <li>Come here, please!</li>
                <li>Can you come here?</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>READYTOTAKEORDER</pattern>
        <template>
            <random>
                <li>Hello I'm Sparkle, I'm ready to take your orders. Please, speak loud my name!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>PERSONDETECTED</pattern>
        <template>
            <random>
                <li>I saw you!</li>
                <li>There you are!</li>
                <li>Oh, you are there!</li>
            </random>
            <random>
                <li>I'm getting there!</li>
                <li>Wait for me!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>CANNOTTAKE</pattern>
        <template>
            <random>
                <li>I'm sorry, but I'm not able to take the object!</li>
                <li>Sorry, I cannot take the object!</li>
                <li>It's impossible for me to take the object, sorry!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>NOTFOUND</pattern>
        <template>
            <random>
                <li>I'm sorry, but I'm not able to find the entity!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>COMEHERE CUSTOMER *</pattern>
        <template>
            <random>
                <li><star/>!
                </li>
                <li>Hey<star/>!
                </li>
                <li>Where is<star/>?
                </li>
            </random>
            <random>
                <li>Could you please come here?</li>
                <li>Please, come here!</li>
                <li>Come here, please!</li>
                <li>Can you come here?</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>ORDERCOMEHERE</pattern>
        <template>
            Who wants something to drink? Please, come here as I can't see you!
        </template>
    </category>

    <category>
        <pattern>MEMORIZEPERSON</pattern>
        <template>
            Please, stay still in front of me. I want to remember you!
        </template>
    </category>

    <category>
        <pattern>ORDER CUSTOMER * DRINK *</pattern>
        <template>
            <random>
                <li>Hi barman!</li>
                <li>Hi!</li>
                <li>Cheers my friend!</li>
                <li>Hi buddy!</li>
            </random>
            <random>
                <li>I have an order for<star index="1"/>. A<star index="2"/>, please!
                </li>
                <li>
                    <star index="1"/>
                    ordered a<star index="2"/>.
                </li>
                <li>
                    <star index="1"/>
                    would like a<star index="2"/>!
                </li>
                <li>A
                    <star index="2"/>
                    for<star index="1"/>, please!
                </li>
            </random>
        </template>
    </category>

    <category>
        <pattern>CONFIRMDRINK CUSTOMER * DRINK *</pattern>
        <template>
            <random>
                <li>Nice!</li>
                <li>Alright!</li>
                <li>Good!</li>
                <li>Perfect!</li>
            </random>
            <random>
                <li>I've seen that the
                    <star index="2"/>
                    for
                    <star index="1"/>
                    is available.
                </li>
                <li>My sensors confirm that the
                    <star index="2"/>
                    for
                    <star index="1"/>
                    is available.
                </li>
            </random>
        </template>
    </category>

    <category>
        <pattern>CONFIRMNOTAVAILABLE CUSTOMER * DRINK *</pattern>
        <template>
            <random>
                <li>Oh I'm sorry!</li>
                <li>Mmm...</li>
            </random>
            <random>
                <li>I've seen that the
                    <star index="2"/>
                    for
                    <star index="1"/>
                    is not available.
                </li>
                <li>I'm pretty sure that the
                    <star index="2"/>
                    for
                    <star index="1"/>
                    is not available.
                </li>
                <li>I don't see any
                    <star index="2"/>
                    for
                    <star index="1"/>
                    here.
                </li>
            </random>
        </template>
    </category>

    <category>
        <pattern>CALLPERSONUNAVAILABLE CUSTOMER * DRINK *</pattern>
        <template>
            <random>
                <li>I'm sorry<star index="1"/>, but your drink is not available! Can you please come here?
                </li>
            </random>
        </template>
    </category>

    <category>
        <pattern>SPRINFOCOLLECTED TOTAL * MALES * FEMALES *</pattern>
        <template>
            Scan completed!
            <random>
                <li>There are
                    <star index="1"/>
                    persons in the room,
                    <star index="2"/>
                    are males and
                    <star index="3"/>
                    are females!
                </li>
            </random>
        </template>
    </category>

    <category>
        <pattern>SPRINFOCOLLECTED DONOTKNOW</pattern>
        <template>
            Scan completed!
            <random>
                <li>I'm sorry, but I wasn't able to detect you!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>FOLLOWYOU</pattern>
        <template>
            <random>
                <li>Okay!</li>
                <li>Alright!</li>
                <li>Good!</li>
                <li>Perfect!</li>
            </random>
            <random>
                <li>I'm following you.</li>
                <li>I'm chasing you.</li>
            </random>
            Please go ahead!
            |[STOP]
        </template>
    </category>

    <category>
        <pattern>FOLLOWME</pattern>
        <template>
            Okay!
            <random>
                <li>Now, please follow me.</li>
                <li>Follow me.</li>
            </random>
            Stay behind me!
            |[STOP]
        </template>
    </category>

    <category>
        <pattern>STOPFOLLOWING</pattern>
        <template>
            <think>
                <set name="topic"></set>
            </think>
            <random>
                <li>Okay!</li>
                <li>Alright!</li>
                <li>Good!</li>
                <li>Perfect!</li>
            </random>
            <random>
                <li>Here we are.</li>
                <li>Here I am.</li>
            </random>
            |[STOPFOLLOWING]
        </template>
    </category>

    <category>
        <pattern>WAITFORME</pattern>
        <template>I'm a bit slow! Please wait for me!</template>
    </category>

    <category>
        <pattern>PLAYRIDDLES</pattern>
        <template>
            Hello everybody! Welcome to the SPR test.
            <random>
                <li>I want to play riddles!</li>
                <li>I'd like to play riddles!</li>
                <li>Let's play riddles!</li>
            </random>
            I'll wait for ten seconds and then I'll turn 180 degrees!
        </template>
    </category>

    <category>
        <pattern>PLAYWITHME</pattern>
        <template>
            <random>
                <li>Who wants to play with me?</li>
                <li>Is there anyone that wants to play with me?</li>
                <li>I need a volunteer to play with me!</li>
            </random>
            Please, stay still and look at me! I'll let you know when we are ready!
        </template>
    </category>

    <category>
        <pattern>WEREADY</pattern>
        <template>
            <random>
                <li>I'm ready! What is you question?</li>
                <li>Come on, go ahead with you question!</li>
            </random>
            <srai>WAITASR</srai>
        </template>
    </category>

    <category>
        <pattern>SCANNINGPEOPLE</pattern>
        <template>
            <random>
                <li>Wait! I'm scanning the crowd!</li>
                <li>Just few moments! I'm acquiring information about the crowd!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>PLAYBLINDMAN</pattern>
        <template>
            <random>
                <li>Let's play the blind man's bluff game!</li>
            </random>
            I'll wait for ten seconds..
        </template>
    </category>

    <category>
        <pattern>WHATNOW</pattern>
        <template>
